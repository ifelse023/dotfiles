#=== General Settings ===
font-size = 16
theme = tokyonight
confirm-close-surface = true
window-decoration = false
gtk-single-instance = true
#=== Keybindings ===

#-- General --
keybind = clear

#-- Clipboard --
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

#-- Scrolling --
keybind = ctrl+shift+end=scroll_to_bottom
keybind = ctrl+shift+home=scroll_to_top
keybind = ctrl+shift+j=scroll_page_lines:1
keybind = ctrl+shift+k=scroll_page_lines:-1

#-- Font Size Adjustments --
keybind = ctrl+shift+physical:kp_add=increase_font_size:1
keybind = ctrl+shift+physical:kp_subtract=decrease_font_size:1
keybind = ctrl+shift+physical:kp_enter=reset_font_size
